#version 330
in vec4 Color;
in vec2 TexCoord0;
in float lighting;
out vec4 FragColor;
uniform sampler2D gSampler;
void main()
{
  float lightingCoeff = 0.2 + 0.8 * lighting;
	FragColor = texture2D(gSampler, TexCoord0.xy);
  FragColor = FragColor * Color * vec4(vec3(1.0,1.0,1.0) * lightingCoeff,1.0);
}
